
@model Papeleria.MVC.Models.PedidosVM.GetPedidoByFecha.FechaEmisionViewModel

@{
    ViewData["Title"] = "GetPedidoByFechaEmision";
}

<h1>Buscar Pedido por fecha de Emisión</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetPedidoByFechaEmision">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaEmision" class="control-label"></label>
                <input asp-for="FechaEmision" class="form-control" />
                <span asp-validation-for="FechaEmision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar Pedidos" class="btn btn-primary" />
            </div>
        </form>
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="p-3 mb-2 bg-danger text-white rounded">
            <p>@ViewBag.Error</p>
        </div>
    } else if (Model.pedidos.Any())
    {
        <div>
            <table class="table table-success table-striped table-striped-columns">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.mostrar.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.mostrar.Cliente)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.mostrar.FechaEntrega)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.mostrar.Total)
                        </th>
                        <th>Anular Pedido</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.pedidos)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaEntrega)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td><span class="btn btn-outline-danger">@Html.ActionLink("Anular Pedido", "AnularPedido", new { Id = item.Id })</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    
</div>


