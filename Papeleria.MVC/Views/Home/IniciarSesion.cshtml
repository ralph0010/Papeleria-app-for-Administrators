@model Papeleria.MVC.Models.UsuariosVM.IniciarSesionUsuarioVM

@{
    ViewData["Title"] = "IniciarSesion";
}

<h1>IniciarSesion</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IniciarSesion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="btnIniciarSesion" type="submit" value="Iniciar Sesion" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if(!string.IsNullOrEmpty(ViewBag.Error)){
    @* @DisiparLoading("loadingIniciarSesion"); *@
    <div>
        <p class="p-3 mb-2 bg-danger text-white rounded mt-1" id="pErrorInicioSesion">@ViewBag.Error</p>
    </div>
}      
        <div id="loadingIniciarSesion" class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>

  




<div>
    <a asp-action="Index">Regresar a Inicio</a>
</div>
<script src="~/js/inicioSesion.js" asp-append-version="true"></script>

