    @model Papeleria.MVC.Models.ClientesVM.BuscarCliente

@{
    ViewData["Title"] = "MostrarClientesPorRazonSocial";
}

<h1>Mostrar Clientes Por Razon Social</h1>

<h4>Buscar Clientes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MostrarClientesPorRazonSocial">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RazonSocial" class="control-label"></label>
                <input asp-for="RazonSocial" class="form-control" />
                <span asp-validation-for="RazonSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar Clientes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if(Model.clientes.Any())
{
    <table class="table table-success table-striped-columns">
        <thead>
            <tr class="table-active">
                <th> 
                    @Html.DisplayNameFor(model =>Model.clienteReferencia.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.clienteReferencia.Rut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.clienteReferencia.RazonSocial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.clienteReferencia.Calle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.clienteReferencia.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.clienteReferencia.Ciudad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.clienteReferencia.DistanciaPapeleria)
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.clientes)
            {
                <tr>
                    <td>
                         @item.Id
                    </td>
                    <td>
                        @item.Rut
                    </td>
                    <td>
                        @item.RazonSocial
                    </td>
                    <td>
                        @item.Calle
                    </td>
                    <td>
                        @item.Numero
                    </td>
                    <td>
                        @item.Ciudad
                    </td>
                    <td>
                        @item.DistanciaPapeleria
                    </td>

                </tr>
            }
        </tbody>
    </table>
}else if(!string.IsNullOrEmpty(ViewBag.Error)){
    <div class="p-3 mb-2 bg-danger text-white rounded mt-1">
        <p> @ViewBag.Error </p>
    </div>
}


