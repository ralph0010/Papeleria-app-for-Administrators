@model Papeleria.MVC.Models.ClientesVM.GetClientesByMonto.GetClienteByMontoViewModel

@{
    ViewData["Title"] = "GetClientesByMonto";
}

<h1>Buscar Clientes que superen monto ingresado</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetClientesByMonto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar Clientes" class="btn btn-warning " />
            </div>
        </form>
    </div>
</div>
@if (Model.clientesVM.Any())
{
    <table class="table table-success table-striped-columns">
        <thead>
            <tr class="table-active">
                <th>
                    @Html.DisplayNameFor(model => Model.cliente.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.cliente.Rut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.cliente.RazonSocial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.cliente.Calle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.cliente.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.cliente.Ciudad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.cliente.DistanciaPapeleria)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.clientesVM)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Rut
                    </td>
                    <td>
                        @item.RazonSocial
                    </td>
                    <td>
                        @item.Calle
                    </td>
                    <td>
                        @item.Numero
                    </td>
                    <td>
                        @item.Ciudad
                    </td>
                    <td>
                        @item.DistanciaPapeleria
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="p-3 mb-2 bg-danger text-white rounded mt-1">
        <p> @ViewBag.Error </p>
    </div>
}

