@model Papeleria.MVC.Models.UsuariosVM.EditarUsuarioVM

@{
    ViewData["Title"] = "Edit";
}


<h1>Edit</h1>

<h2>EditarUsuarioVM</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3>@Model.Email</h3>            
                <div class="form-group" >
                        <input asp-for="Email" class="form-control" value="@Model.Email" readonly id="emailField" />
                    <span asp-validation-for="Email" class="text-danger"></span> 
                </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

@if(!string.IsNullOrEmpty(ViewBag.Error)){
    <div class="p-3 mb-2 bg-danger text-white rounded mt-1">
        <p>@ViewBag.Error</p>
    </div>
}
    <a asp-action="Index">Mostrar tablas de usuarios</a>
</div>

